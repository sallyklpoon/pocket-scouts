<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="2"
    tools:context=".AuthSplash">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_app_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/app_logo"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="@string/sign_up" />

        <TextView
            android:id="@+id/text_tagline"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#777"
            android:text="@string/journey"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_continue_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_google"
            app:icon="@drawable/google_logo_icon"
            android:textAllCaps="false"
            android:paddingHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/red_google"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_signup"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="40dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#777"
            app:strokeWidth="2dp"
            android:textColor="#777"
            android:onClick="launchEmailSignup"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/facebook_circle_color_512"
                app:civ_border_width="0dp"
                android:layout_marginHorizontal="10dp"
                app:civ_border_color="#FF000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/twitter"
                app:civ_border_width="0dp"
                android:layout_marginHorizontal="10dp"
                app:civ_border_color="#FF000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/github_512"
                app:civ_border_width="0dp"
                android:layout_marginHorizontal="10dp"
                app:civ_border_color="#FF000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/already_account" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_link"
                android:onClick="login"
                android:text="@string/login" />
        </LinearLayout>


    </LinearLayout>



</GridLayout>